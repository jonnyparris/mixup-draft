 <% if @errors %>
   <% @errors.each do |error_message| %>
     <div data-alert class="alert-box alert round">
        <%= error_message %>
       <a href="#" class="close">&times;</a>
     </div>
   <% end %>
<% elsif @error%>
  <div data-alert class="alert-box alert round">
     <%= @error %>
    <a href="#" class="close">&times;</a>
  </div>
 <% end %>